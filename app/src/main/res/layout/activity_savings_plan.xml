<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".saving_plan.SavingsPlanActivity"
    android:weightSum="10"
    android:background="@drawable/travel_btn">

    <TextView
        android:layout_width="match_parent"
        android:text="Previous Savings Plan History"
        android:layout_height="0dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_weight="1"
        android:layout_margin="10dp"/>

    <ListView
        android:layout_weight="8"
        android:id="@+id/listViewSavingsPlan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:dividerHeight="5dp"
        android:layout_margin="10dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/travel_btn"
        android:layout_margin="5dp"
        android:weightSum="4">

        <EditText
            android:id="@+id/et_monthlyBudget"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="number"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:hint="@string/saving_layout_month_input_hint"/>


        <Button
            android:id="@+id/btnSaveBudget"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:text="Add"
            android:layout_marginRight="10dp"
            android:drawableRight="@android:drawable/ic_input_add"
            android:background="@drawable/list_view_background"
            />

    </LinearLayout>

</LinearLayout>