<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="10"
    tools:context=".pin_code.PinCodeVerificationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="9">

        <EditText
            android:textAlignment="center"
            android:id="@+id/et_pinCodeCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter 4 digit pin here"
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:maxLength="4"
            android:inputType="numberPassword"
            android:textSize="26sp"
            android:singleLine="true"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_pinCodeCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_pin_code_check"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnForgotPin"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginBottom="25dp"
        android:background="#ccc"
        android:text="@string/tv_forgot_pin"/>

</LinearLayout>